@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<CourseWithCategoryViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h3 class="card-title text-center">Courses</h3>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-outline-primary mb-3">Add Course</a>

            @if (ViewBag.Result != null)
            {
                <div class="alert alert-success text-center" role="alert">
                    <h2>@ViewBag.Result</h2>
                </div>
            }
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Length</th>
                                <th>Category</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ToList())
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                    <td>@item.Feature?.Duration</td>
                                    <td>@item.Category?.Name</td>
                                    <td><a class="btn btn-outline-warning" asp-action="Update" asp-controller="Courses" asp-route-courseId="@item.Id">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        No Course Has Found
                    </div>
                }
            </div>
        </div>
    </div>
</div>
